{% set version = (blinko_version | default(bookshelf_const_version.blinko, true)) %}
{% set postgres_version = (blinko_postgres_version | default(bookshelf_const_version.blinko_postgres, true)) %}
{% set web_ui_port = (blinko_web_ui_port | default(bookshelf_const_port.blinko.web_ui, true)) %}
{% set tailscale_version = (blinko_tailscale_version | default(bookshelf_const_version.blinko_tailscale, true)) %}
{% set tailscale_service = (blinko_service_name + '-tailscale') %}
{% set self_net = 'blinko' %}
---
services:
  {{ blinko_db_service }}:
    # https://hub.docker.com/_/postgres/tags?name=alpine
    image: postgres:{{ postgres_version }}
    container_name: {{ blinko_db_service }}
    restart: unless-stopped
    env_file:
      - secret.env
      - main.env    # <- Relies on values from secret.env
    volumes:
      - '{{ conf_dir }}/db:/var/lib/postgresql/data'
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U $${POSTGRES_USER} -d $${POSTGRES_DB}"]
      interval: 5s
      timeout: 10s
      retries: 5
    networks:
      - {{ self_net }}

  blinko:
    # https://hub.docker.com/r/blinkospace/blinko/tags
    image: blinkospace/blinko:{{ version }}
    container_name: {{ blinko_service_name }}
    restart: unless-stopped
    env_file:
      - secret.env
      - main.env    # <- Relies on values from secret.env
    volumes:
      - '{{ conf_dir }}/config:/app/.blinko'
      - ./healthcheck.sh:/healthcheck.sh:ro
    logging:
      options:
        max-size: "10m"
        max-file: "3"
    healthcheck:
      test: ["CMD", "sh", "/healthcheck.sh", "http://127.0.0.1:{{ blinko_web_ui_port_int }}"]
      interval: 30s
      timeout: 10s
      retries: 5
      start_period: 30s
    depends_on:
      {{ blinko_db_service }}:
        condition: service_healthy
        restart: true
{% if blinko_tailscaled %}
    network_mode: "service:{{ tailscale_service }}"

  {{ tailscale_service }}:
    # https://hub.docker.com/r/tailscale/tailscale/tags
    image: tailscale/tailscale:{{ tailscale_version }}
    container_name: {{ tailscale_service }}
    restart: unless-stopped
    env_file:
      - ./secret.env
      - ./main.env
    volumes:
      - '{{ conf_dir }}/tailscale:/var/lib/tailscale'
      # Demo: https://github.com/tailscale-dev/video-code-snippets/blob/main/2025-06-mealie/serve.json
      - ./serve.json:/config/serve.json
    devices:
      - /dev/net/tun:/dev/net/tun
    cap_add:
      - NET_ADMIN
      - SYS_MODULE
{% endif %}{# blinko_tailscaled #}
    hostname: {{ blinko_hostname }}
    ports:
      - "{{ web_ui_port }}:{{ blinko_web_ui_port_int }}"
    networks:
      - {{ self_net }}
{% if (nginx_proxy_enabled | default(false)) %}
      - {{ nginx_proxy_net }}
    environment:
      - VIRTUAL_HOST={{ blinko_vhost }}
      - VIRTUAL_PORT={{ blinko_web_ui_port_int }}
{% endif %}{# nginx_proxy_enabled #}

networks:
  {{ self_net }}:
    name: {{ self_net }}
{% if (nginx_proxy_enabled | default(false)) %}
  {{ nginx_proxy_net }}:
    external: true
{% endif %}{# nginx_proxy_enabled #}
