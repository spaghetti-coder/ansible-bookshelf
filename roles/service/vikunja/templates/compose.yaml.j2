{% set version = (vikunja_version | default(bookshelf_const_version.vikunja, true)) %}
{% set postgres_version = (vikunja_postgres_version | default(bookshelf_const_version.vikunja_postgres, true)) %}
{% set web_ui_port = (vikunja_web_ui_port | default(bookshelf_const_port.vikunja.web_ui, true)) %}
{% set tailscale_version = (vikunja_tailscale_version | default(bookshelf_const_version.vikunja_tailscale, true)) %}
{% set tailscale_service = (vikunja_service_name + '-tailscale') %}
{% set self_net = 'vikunja' %}
---
services:
  {{ vikunja_db_service }}:
    # https://hub.docker.com/_/postgres/tags?name=alpine
    image: postgres:{{ postgres_version }}
    container_name: {{ vikunja_db_service }}
    restart: unless-stopped
    env_file:
      - secret.env
      - main.env
    volumes:
      - '{{ vikunja_conf_dir }}/db:/var/lib/postgresql/data'
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U $${POSTGRES_USER} -d $${POSTGRES_DB}"]
      interval: 5s
      timeout: 10s
      retries: 5
    networks:
      - {{ self_net }}

  vikunja:
    # https://hub.docker.com/r/vikunja/vikunja/tags
    image: vikunja/vikunja:{{ version }}
    container_name: {{ vikunja_service_name }}
    restart: unless-stopped
    env_file:
      - secret.env
      - main.env
    volumes:
      - '{{ vikunja_conf_dir }}/config:/app/vikunja/files'
    user: "{{ user_uid }}:{{ user_gid }}"
{% if vikunja_tailscaled %}
    network_mode: "service:{{ tailscale_service }}"

  {{ tailscale_service }}:
    # https://hub.docker.com/r/tailscale/tailscale/tags
    image: tailscale/tailscale:{{ tailscale_version }}
    container_name: {{ tailscale_service }}
    restart: unless-stopped
    env_file:
      - secret.env
      - main.env
    volumes:
      - '{{ vikunja_conf_dir }}/tailscale:/var/lib/tailscale'
      # Demo: https://github.com/tailscale-dev/video-code-snippets/blob/main/2025-06-mealie/serve.json
      - ./serve.json:/config/serve.json
    devices:
      - /dev/net/tun:/dev/net/tun
    cap_add:
      - NET_ADMIN
      - SYS_MODULE
{% endif %}{# vikunja_tailscaled #}
    depends_on:
      {{ vikunja_db_service }}:
        condition: service_healthy
    hostname: {{ vikunja_hostname }}
    ports:
      - "{{ web_ui_port }}:{{ vikunja_web_ui_port_int }}"
    networks:
      - {{ self_net }}
{% if (nginx_proxy_enabled | default(false)) %}
      - {{ nginx_proxy_net }}
    environment:
      - VIRTUAL_HOST={{ vikunja_vhost }}
      - VIRTUAL_PORT={{ vikunja_web_ui_port_int }}
{% endif %}{# nginx_proxy_enabled #}

networks:
  {{ self_net }}:
    name: {{ self_net }}
{% if (nginx_proxy_enabled | default(false)) %}
  {{ nginx_proxy_net }}:
    external: true
{% endif %}{# nginx_proxy_enabled #}
