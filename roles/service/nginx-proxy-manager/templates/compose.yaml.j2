{% set version = (nginx_proxy_manager_version | default(bookshelf_const_version.nginx_proxy_manager, true)) %}
{% set web_ui_port = (nginx_proxy_manager_web_ui_port | default(bookshelf_const_port.nginx_proxy_manager.web_ui, true)) | int %}
{% set extra_ports = nginx_proxy_manager_ports | default([], true) %}
{% set proxy_enabled = (nginx_proxy_enabled | default(false)) %}
{% set ports_enabled = web_ui_port > -1 or extra_ports | length > 0 %}
---
{{ lookup('template', './../../tailscale/partial/sidecar-compose.yaml.j2', template_vars=dict(
  ts_version = nginx_proxy_manager_ts_version | default(bookshelf_const_version.nginx_proxy_manager_tailscale, true),
  ts_name = nginx_proxy_manager_ts_service_name, ts_conf_dir = conf_dir + '/tailscale'
)) }}

services:
  app:
    # https://hub.docker.com/r/jc21/nginx-proxy-manager/tags
    image: jc21/nginx-proxy-manager:{{ version }}
    container_name: "{{ nginx_proxy_manager_service_name }}"
    restart: unless-stopped
    volumes:
      - "{{ conf_dir }}/data:/data"
      - "{{ conf_dir }}/letsencrypt:/etc/letsencrypt"
    env_file:
      - ./secret.env
      - ./main.env
{% if nginx_proxy_manager_tailscaled %}
    network_mode: "service:tailscale"

  tailscale:
    <<: *tailscale
{% endif %}{# nginx_proxy_manager_tailscaled #}
    hostname: "{{ nginx_proxy_manager_hostname }}"
{% if nginx_proxy_manager_host_net %}
    network_mode: host          # <- Allows adding Stream ports without editting compose file
{% else %}
{% if proxy_enabled %}
    networks:
      - {{ nginx_proxy_net }}
{% else %}
    network_mode: bridge
{% endif %}{# proxy_enabled #}
{% if ports_enabled %}
    ports:
{% if web_ui_port > -1 %}
      - '{{ web_ui_port }}:{{ nginx_proxy_manager_web_ui_port_int }}'  # Web UI port
{% endif %}
{% for port_kv in extra_ports %}
      - "{{ port_kv }}"
{% endfor %}
      # Add any other Stream port you want to expose
      # - '21:21'               # FTP
{% endif %}{# nginx_proxy_manager_host_net #}
{% endif %}{# ports_enabled #}
{% if proxy_enabled %}
    environment:
      # Meta data for nginx-proxy
      - VIRTUAL_HOST={{ nginx_proxy_manager_vhost }}
      - VIRTUAL_PORT=81
{% if not nginx_proxy_manager_host_net %}

networks:
  "{{ nginx_proxy_net }}":
    external: true
{% endif %}{# nginx_proxy_manager_host_net #}
{% endif %}{# proxy_enabled #}
