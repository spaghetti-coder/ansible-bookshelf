{% set version = (smtp4dev_version | default(bookshelf_const_version.smtp4dev, true)) %}
{% set web_ui_port = (smtp4dev_web_ui_port | default(bookshelf_const_port.smtp4dev.web_ui, true)) %}
{% set tailscale_version = (smtp4dev_tailscale_version | default(bookshelf_const_version.smtp4dev_tailscale, true)) %}
{% set tailscale_service = 'smtp4dev-tailscale' %}
---
services:
  smtp4dev:
    # https://hub.docker.com/r/rnwood/smtp4dev/tags?name=v
    image: rnwood/smtp4dev:{{ version }}
    container_name: {{ smtp4dev_service_name }}
    restart: unless-stopped
    env_file:
      - ./secret.env
      - ./main.env
    volumes:
      - '{{ conf_dir }}/config:/smtp4dev'
{% if smtp4dev_tailscaled %}
    network_mode: service:{{ tailscale_service }}

  {{ tailscale_service }}:
    # https://hub.docker.com/r/tailscale/tailscale/tags
    image: tailscale/tailscale:{{ tailscale_version }}
    container_name: {{ smtp4dev_service_name }}-tailscale
    restart: unless-stopped
    env_file:
      - ./secret.env
      - ./main.env
    volumes:
      - '{{ conf_dir }}/tailscale:/var/lib/tailscale'
      # Demo: https://github.com/tailscale-dev/video-code-snippets/blob/main/2025-06-mealie/serve.json
      - ./serve.json:/config/serve.json
    devices:
      - /dev/net/tun:/dev/net/tun
    cap_add:
      - NET_ADMIN
      - SYS_MODULE
{% endif %}{# smtp4dev_tailscaled #}
    hostname: {{ smtp4dev_hostname }}
    ports:
      - '{{ web_ui_port }}:{{ smtp4dev_web_ui_port_int }}'
      - '{{ smtp4dev_smtp_port_ext }}:{{ smtp4dev_smtp_port_int }}'
      - '{{ smtp4dev_imap_port_ext }}:{{ smtp4dev_imap_port_int }}'
{% if not (nginx_proxy_enabled | default(false)) %}
    network_mode: bridge    # <- Avoid creating default compose network
{% else %}
    environment:
      - VIRTUAL_HOST={{ smtp4dev_vhost }}
      - VIRTUAL_PORT={{ smtp4dev_web_ui_port_int }}
    networks:
      - {{ nginx_proxy_net }}

networks:
  {{ nginx_proxy_net }}:
    external: true
{% endif %}{# nginx_proxy_enabled #}
