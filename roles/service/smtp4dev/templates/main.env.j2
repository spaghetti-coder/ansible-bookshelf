# CONFIG
# ======
# Specifies the URLs the web UI will use inside the container.
ServerOptions__Urls=http://*:{{ smtp4dev_web_ui_port_int }}
# SMTP server port. Specify 0 to assign automatically. Defaults to 25
ServerOptions__Port={{ smtp4dev_smtp_port_int }}
# IMAP server port
ServerOptions__ImapPort={{ smtp4dev_imap_port_int }}
# Specifies the server hostname. Used in auto-generated TLS certificate if enabled.
ServerOptions__HostName={{ smtp4dev_hostname }}
{% if smtp4dev_tailscaled %}

# TAILSCALE
# =========
TS_STATE_DIR=/var/lib/tailscale
TS_SERVE_CONFIG=/config/serve.json
TS_USERSPACE=false
{% if smtp4dev_tailscale_ts_hostname %}
TS_HOSTNAME={{ smtp4dev_tailscale_ts_hostname }}
{% endif %}
{% endif %}{# smtp4dev_tailscaled #}

# EXTRA
# =====
# https://github.com/rnwood/smtp4dev/blob/master/Rnwood.Smtp4dev/appsettings.json
{{ smtp4dev_extra_env }}
