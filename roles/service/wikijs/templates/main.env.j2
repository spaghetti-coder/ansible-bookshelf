# STATIC
# ======
DB_TYPE=postgres
DB_PORT=5432

# CONFIG
# ======
POSTGRES_DB=wikijs
POSTGRES_USER=wikijs

PUID={{ user_uid }}
PGID={{ user_gid }}
TZ={{ wikijs_tz }}
DB_HOST={{ wikijs_db_service }}
DB_NAME="${POSTGRES_DB}"
DB_USER="${POSTGRES_USER}"
DB_PASS="${POSTGRES_PASSWORD}"

# TAILSCALE
# =========
TS_STATE_DIR=/var/lib/tailscale
TS_SERVE_CONFIG=/config/serve.json
TS_USERSPACE=false
TS_HOSTNAME={{ wikijs_tailscale_ts_hostname }}

# EXTRA
# =====
{{ wikijs_extra_env }}
