{
  layer4 {
		0.0.0.0:3128 {
      route {
        proxy {env.PVE_IP}:3128
      }
		}
  }
}

{env.PVE_HOST} {
  tls /etc/ssl/private/domain.local.pem /etc/ssl/private/domain.local.pem

  # ~~~~~ HANDLERS ~~~~~

  handle {
    reverse_proxy https://{env.PVE_IP}:8006 {
      transport http {
        tls
        tls_insecure_skip_verify
      }
    }
  }
}
