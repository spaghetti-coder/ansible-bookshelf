domain.local, *.domain.local {
  tls /etc/ssl/private/domain.local.pem /etc/ssl/private/domain.local.pem

  # ~~~~~ HANDLERS ~~~~~

  @api host api.domain.local
  handle @api {
    reverse_proxy localhost:8081
  }

  @home host *.domain.local domain.local
  handle @home {
    reverse_proxy localhost:8080
  }
}

:8080 {
  respond ":8080 Fallback"
}

:8081 {
  respond ":8081 I'm API"
}
