{% set version = torrserver_version | default(bookshelf_const_version.torrserver, true) %}
{% set web_ui_port = torrserver_web_ui_port | default(bookshelf_const_port.torrserver.web_ui, true) %}
{% set tailscale_version = torrserver_ts_version | default(bookshelf_const_version.torrserver_tailscale, true) %}
---
services:
  {{ torrserver_service_name }}:
    # https://github.com/yourok/TorrServer/pkgs/container/torrserver
    image: ghcr.io/yourok/torrserver:{{ version }}
    container_name: {{ torrserver_service_name }}
    restart: unless-stopped
    env_file:
      - ./secret.env
      - ./main.env
    volumes:
      - '{{ conf_dir }}/config:{{ torrserver_conf_path }}'
      # - '{{ conf_dir }}/cache:{{ torrserver_cache_path }}'
    # network_mode: host    # <- To allow DLNA feature
{% if torrserver_tailscaled %}
    network_mode: "service:{{ torrserver_ts_service_name }}"

  {{ torrserver_ts_service_name }}:
    # https://hub.docker.com/r/tailscale/tailscale/tags
    image: tailscale/tailscale:{{ tailscale_version }}
    container_name: {{ torrserver_ts_service_name }}
    restart: unless-stopped
    env_file:
      - ./secret.env
      - ./main.env
    volumes:
      - '{{ conf_dir }}/tailscale:/var/lib/tailscale'
      # Demo: https://github.com/tailscale-dev/video-code-snippets/blob/main/2025-06-mealie/serve.json
      - ./serve.json:/config/serve.json
    devices:
      - /dev/net/tun:/dev/net/tun
    cap_add:
      - NET_ADMIN
      - SYS_MODULE
{% endif %}{# torrserver_tailscaled #}
    hostname: {{ torrserver_hostname }}
{% if torrserver_web_ui_ports_exposed %}
    ports:
      - '{{ web_ui_port }}:{{ torrserver_web_ui_port_int }}'
{% else %}
    # ports:
    #   - '{{ web_ui_port }}:{{ torrserver_web_ui_port_int }}'
{% endif %}
{% if not (nginx_proxy_enabled | default(false)) %}
    network_mode: bridge
{% else %}
    networks:
      - {{ nginx_proxy_net }}
    environment:
      - VIRTUAL_HOST={{ torrserver_vhost }}
      - VIRTUAL_PORT={{ torrserver_web_ui_port_int }}

networks:
  {{ nginx_proxy_net }}:
    external: true
{% endif %}{# nginx_proxy_enabled #}
