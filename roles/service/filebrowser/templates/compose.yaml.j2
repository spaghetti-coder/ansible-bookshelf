{% set version = (filebrowser_version | default(bookshelf_const_version.filebrowser, true)) %}
{% set web_ui_port = (filebrowser_web_ui_port | default(bookshelf_const_port.filebrowser.web_ui, true)) %}
{% set data_dir = ((filebrowser_user == filebrowser_owner) | ternary(filebrowser_data_dir, data_dir_abs)) %}
---
{{ lookup('template', './../../tailscale/partial/sidecar-compose.yaml.j2', template_vars=dict(
  ts_version = filebrowser_ts_version | default(bookshelf_const_version.filebrowser_tailscale, true),
  ts_name = filebrowser_ts_service_name, ts_conf_dir = conf_dir + '/tailscale'
)) }}

services:
  app:
    # https://hub.docker.com/r/filebrowser/filebrowser/tags?name=-s6
    image: filebrowser/filebrowser:{{ version }}
    container_name: {{ filebrowser_service_name }}
    restart: unless-stopped
    env_file:
      - ./secret.env
      - ./main.env
    volumes:
      - '{{ data_dir }}:/srv'
      - '{{ conf_dir }}/config:/config'
      - '{{ conf_dir }}/config:/database'
{% if filebrowser_tailscaled %}
    network_mode: "service:tailscale"

  tailscale:
    <<: *tailscale
{% endif %}{# filebrowser_tailscaled #}
    hostname: {{ filebrowser_hostname }}
{% if web_ui_port | int > -1 %}
    ports:
      - {{ web_ui_port }}:{{ filebrowser_web_ui_port_int }}
{% else %}
    # ports:
    #   - {{ web_ui_port }}:{{ filebrowser_web_ui_port_int }}
{% endif %}
{% if not (nginx_proxy_enabled | default(false)) %}
    network_mode: bridge
{% else %}
    networks:
      - {{ nginx_proxy_net }}
    environment:
      - VIRTUAL_HOST={{ filebrowser_vhost }}
      - VIRTUAL_PORT={{ filebrowser_web_ui_port_int }}

networks:
  {{ nginx_proxy_net }}:
    external: true
{% endif %}{# nginx_proxy_enabled #}
