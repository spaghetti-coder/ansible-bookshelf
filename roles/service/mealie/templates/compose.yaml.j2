{% set version = (mealie_version | default(bookshelf_const_version.mealie, true)) %}
{% set web_ui_port = (mealie_web_ui_port | default(bookshelf_const_port.mealie.web_ui, true)) %}
{% set tailscale_version = (mealie_tailscale_version | default(bookshelf_const_version.mealie_tailscale, true)) %}
{% set tailscale_service = 'mealie-tailscale' %}
---
# https://www.youtube.com/watch?v=DDzKd9aNFX0
# https://docs.techdox.nz/mealie/
services:
  mealie:
    # https://github.com/mealie-recipes/mealie/pkgs/container/mealie
    image: ghcr.io/mealie-recipes/mealie:{{ version }}
    container_name: {{ mealie_service_name }}
    restart: unless-stopped
    env_file:
      - ./main.env
      - ./extra.env
    volumes:
      - '{{ conf_dir }}/config:/app/data'
{% if mealie_tailscaled %}
    network_mode: service:{{ tailscale_service }}

  {{ tailscale_service }}:
    # https://hub.docker.com/r/tailscale/tailscale/tags
    image: tailscale/tailscale:{{ tailscale_version }}
    container_name: {{ mealie_service_name }}-tailscale
    restart: unless-stopped
    env_file:
      - ./main.env
      - ./secret.env
      - ./extra.env
    volumes:
      - '{{ conf_dir }}/tailscale:/var/lib/tailscale'
      # Demo: https://github.com/tailscale-dev/video-code-snippets/blob/main/2025-06-mealie/serve.json
      - ./serve.json:/config/serve.json
    devices:
      - /dev/net/tun:/dev/net/tun
    cap_add:
      - NET_ADMIN
      - SYS_MODULE
{% endif %}{# mealie_tailscaled #}
    hostname: {{ mealie_hostname }}
    ports:
      - "{{ web_ui_port }}:{{ mealie_web_ui_port_int }}"
{% if not (nginx_proxy_enabled | default(false)) %}
    network_mode: bridge    # <- Avoid creating default compose network
{% else %}
    environment:
      - VIRTUAL_HOST={{ mealie_vhost }}
      - VIRTUAL_PORT={{ mealie_web_ui_port_int }}
    networks:
      - {{ nginx_proxy_net }}

networks:
  {{ nginx_proxy_net }}:
    external: true
{% endif %}{# nginx_proxy_enabled #}
