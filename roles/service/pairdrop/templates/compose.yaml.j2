{% set version = (pairdrop_version | default(bookshelf_const_version.pairdrop, true)) %}
{% set web_ui_port = (pairdrop_web_ui_port | default(bookshelf_const_port.pairdrop.web_ui, true)) %}
{% set tailscale_version = (pairdrop_tailscale_version | default(bookshelf_const_version.pairdrop_tailscale, true)) %}
{% set tailscale_service = 'pairdrop-tailscale' %}
---
services:
  pairdrop:
    # https://hub.docker.com/r/linuxserver/pairdrop/tags?name=-ls
    image: linuxserver/pairdrop:{{ version }}
    container_name: {{ pairdrop_service_name }}
    restart: unless-stopped
    env_file:
      - ./secret.env
      - ./main.env
{% if pairdrop_tailscaled %}
    network_mode: service:{{ tailscale_service }}

  {{ tailscale_service }}:
    # https://hub.docker.com/r/tailscale/tailscale/tags
    image: tailscale/tailscale:{{ tailscale_version }}
    container_name: {{ pairdrop_service_name }}-tailscale
    restart: unless-stopped
    env_file:
      - ./secret.env
      - ./main.env
    volumes:
      - '{{ conf_dir }}/tailscale:/var/lib/tailscale'
      # Demo: https://github.com/tailscale-dev/video-code-snippets/blob/main/2025-06-mealie/serve.json
      - ./serve.json:/config/serve.json
    devices:
      - /dev/net/tun:/dev/net/tun
    cap_add:
      - NET_ADMIN
      - SYS_MODULE
{% endif %}{# pairdrop_tailscaled #}
    hostname: {{ pairdrop_hostname }}
    ports:
      - "{{ web_ui_port }}:{{ pairdrop_web_ui_port_int }}"
{% if not (nginx_proxy_enabled | default(false)) %}
    network_mode: bridge    # <- Avoid creating default compose network
{% else %}
    environment:
      - VIRTUAL_HOST={{ pairdrop_vhost }}
      - VIRTUAL_PORT={{ pairdrop_web_ui_port_int }}
    networks:
      - {{ nginx_proxy_net }}

networks:
  {{ nginx_proxy_net }}:
    external: true
{% endif %}{# nginx_proxy_enabled #}

