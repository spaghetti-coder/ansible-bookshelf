{% set start_server_cmd = copyq_map[copyq_install_method].start_server_cmd %}
{% set icon = copyq_map[copyq_install_method].icon %}
[Desktop Entry]
# Based on {{ copyq_desktop_file }}
Name=CopyQ
Exec={{ start_server_cmd }}
Icon={{ icon }}
GenericName=Clipboard Manager
StartupNotify=false
# The rest is taken from Klipper application.
Type=Application
Terminal=false
# Workaround / fix for issue #1526 that prevents a proper autostart of the tray icon in GNOME
X-GNOME-Autostart-Delay=3
X-KDE-autostart-after=panel
X-KDE-StartupNotify=false
X-KDE-UniqueApplet=true
{% if copyq_install_method == 'flatpak' %}
X-Flatpak=com.github.hluk.copyq
{% endif %}
