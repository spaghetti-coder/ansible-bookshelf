[user]
{% if conf.user_name is defined %}
  name = {{ conf.user_name }}
{% endif %}
{% if conf.user_email is defined %}
  email = {{ conf.user_email }}
{% endif %}
[init]
  defaultBranch = master
[alias]
  co = commit
  ch = checkout
  rb = rebase
  ls = log --oneline -10
  ll = log --oneline
  lg = log --oneline --graph --decorate --abbrev-commit
  stat = status -u
  dif = diff --color-words
[push]
  default = simple
[pull]
  ff = only
[core]
  editor = vim
  # editor = mcedit
[diff]
  tool = vimdiff
  # tool = mcdiff
[merge]
  tool = vimdiff
[mergetool]
  keepBackup = false
[difftool "vimdiff"]
  cmd = vimdiff $LOCAL $REMOTE
[difftool "mcdiff"]
  cmd = mcdiff $LOCAL $REMOTE
